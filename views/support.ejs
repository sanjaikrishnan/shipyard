<div class="container">
    <h2>Contact Shipyard Support</h2>

    <!-- Support Form -->
    <form action="/support" method="POST">
        <label>Name</label>
        <input type="text" name="name" required>

        <label>Email</label>
        <input type="email" name="email" required>

        <label>Message</label>
        <textarea name="message" required></textarea>

        <button type="submit">Submit Request</button>
    </form>

    <h3>Previous Support Requests</h3>
    <table>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Message</th>
            <th>Status</th>
            <th>Response</th>
        </tr>
        <% requests.forEach(request => { %>
            <tr>
                <td><%= request.name %></td>
                <td><%= request.email %></td>
                <td><%= request.message %></td>
                <td><%= request.status %></td>
                <td><%= request.response ? request.response : "Awaiting Response" %></td>
            </tr>
        <% }); %>
    </table>
</div>

<%- include('partials/footer') %>

<style>
    /* Container Styling */
    .container {
        width: 60%;
        margin: 50px auto;
        background: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    /* Form Heading */
    .container h2 {
        text-align: center;
        color: #333;
    }

    /* Labels */
    label {
        font-weight: bold;
        display: block;
        margin: 10px 0 5px;
    }

    /* Input Fields */
    input[type="text"],
    input[type="email"],
    textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    /* Textarea Styling */
    textarea {
        height: 100px;
        resize: none;
    }

    /* Submit Button */
    button {
        width: 100%;
        padding: 10px;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

    button:hover {
        background: #0056b3;
    }

    /* Table Styling */
    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background: #007bff;
        color: white;
    }

    tr:nth-child(even) {
        background: #f2f2f2;
    }

    /* Table Hover Effect */
    tr:hover {
        background: #ddd;
    }
</style>
