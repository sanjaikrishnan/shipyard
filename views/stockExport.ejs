<div class="container">
    <h2>Stock Export Request</h2>
    <form action="/export" method="POST" enctype="multipart/form-data">
        <label>Full Name</label>
        <input type="text" name="fullName" required>

        <label>Company Name</label>
        <input type="text" name="companyName" required>

        <label>Stock Name</label>
        <input type="text" name="stockName" required>

        <label>Stock Category</label>
        <select name="stockCategory">
            <option>Machinery</option>
            <option>Spare Parts</option>
            <option>Raw Materials</option>
            <option>Containers</option>
        </select>

        <label>Stock Images</label>
        <input type="file" name="stockImages" multiple>

        <label>Confirm Details</label>
        <input type="checkbox" name="terms" required> I confirm all details are accurate

        <button type="submit">Submit Request</button>
    </form>
</div>

<%- include('partials/footer') %>

<style>
    /* Centering the form */
    .container {
        width: 50%;
        margin: 50px auto;
        background: #f9f9f9;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    /* Heading */
    .container h2 {
        text-align: center;
        color: #333;
    }

    /* Labels */
    label {
        font-weight: bold;
        display: block;
        margin: 10px 0 5px;
    }

    /* Input fields */
    input[type="text"],
    select,
    input[type="file"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    /* Checkbox styling */
    input[type="checkbox"] {
        margin-right: 10px;
    }

    /* Submit Button */
    button {
        width: 100%;
        padding: 10px;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

    button:hover {
        background: #0056b3;
    }
</style>
