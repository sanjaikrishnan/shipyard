<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Neptune Shipyard</title>
    <link rel="stylesheet" href="/style.css">
    <script defer src="/script.js"></script>
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="logo-section">
                <img src="/images/lo.jpg" alt="Neptune Shipyard Logo" class="logo">
                <h1 class="nav-title">Neptune Shipyard</h1>
            </div>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/teams">Teams</a></li>
                <li><a href="/services">Services</a></li>
                <li><a href="/tenders">Tender</a></li>
                <li><a href="/vigilance">Vigilance</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="/signin" class="nav-signin">Sign In</a></li> <!-- Sign In now inside Navbar -->
            </ul>
        </div>
    </nav>

    <!-- Image Scrolling Section -->
    <section class="image-slider">
        <div class="image-track">
            <img src="/images/drydock.jpg" alt="Dry Dock">
            <img src="/images/storage.jpg" alt="Storage Area">
            <img src="/images/workshop.jpg" alt="Workshops">
            <img src="/images/image1.jpeg" alt="Shipyard View">
            <img src="/images/image2.jpeg" alt="Another Shipyard View">
        </div>
    </section>

    <!-- Welcome Section -->
    <section class="welcome-section">
        <h2>Welcome to Neptune Shipyard</h2>
    </section>

    <!-- Facilities Section -->
    <section class="facilities-section">
        <h2>Our Facilities</h2>
        <div class="facilities-grid">
            <a href="/facilities/drydock" class="facility-card">
                <img src="/images/drydock.jpg" alt="Dry Dock">
                <div class="facility-overlay">
                    <h3>Dry Dock</h3>
                    <p>State-of-the-art dry docking facilities for ship repairs.</p>
                </div>
            </a>

            <a href="/facilities/storage" class="facility-card">
                <img src="/images/storage.jpg" alt="Storage Area">
                <div class="facility-overlay">
                    <h3>Storage Area</h3>
                    <p>Secure and spacious storage for ship components.</p>
                </div>
            </a>

            <a href="/facilities/workshop" class="facility-card">
                <img src="/images/workshop.jpg" alt="Workshops">
                <div class="facility-overlay">
                    <h3>Workshops</h3>
                    <p>Fully equipped workshops for shipbuilding and repairs.</p>
                </div>
            </a>

            <a href="/facilities/hotels" class="facility-card">
                <img src="/images/hostel.jpeg" alt="Hotels">
                <div class="facility-overlay">
                    <h3>Hotels</h3>
                    <p>Comfortable accommodations for crew and visitors.</p>
                </div>
            </a>
        </div>
    </section>

    <!-- Location Section -->
    <section class="map" id="location">
        <h2>Our Location</h2>
        <iframe src="https://www.google.com/maps/embed?..." width="600" height="400"></iframe>
    </section>

    <!-- Contact Us Section -->
    <section class="contact">
        <div class="contact-container">
            <h2>Contact Us</h2>
            <form id="contactForm">
                <label for="name">Name:</label>
                <input type="text" id="name" required>
                <label for="email">Email:</label>
                <input type="email" id="email" required>
                <label for="message">Message:</label>
                <textarea id="message" required></textarea>
                <button type="submit" class="btn">Submit</button>
            </form>
        </div>
    </section>

    <!-- Footer -->
    <footer>
        <p>&copy; 2025 Neptune Shipyard. All rights reserved.</p>
    </footer>

</body>
</html>
