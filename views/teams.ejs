<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Our Team | Shipyard</title>
    <link rel="stylesheet" href="/style.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css">
    <style>
        .team-section { padding: 50px 0; }
        .team-category { margin-bottom: 40px; }
        .team-member {
    display: flex;
    flex-direction: column;
    align-items: center; /* Centers items horizontally */
    text-align: center;
}

        .team-member img {
            border-radius: 50%;
            width: 120px;
            height: 120px;
            object-fit: cover;
        }
        .team-member:hover { transform: scale(1.05); }
        .card { border: none; }
        .role-heading {
            font-weight: bold;
            text-transform: uppercase;
            background: #002244;
            color: white;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    
    <div class="container team-section">
        <h2 class="text-center mb-5">Meet Our Team</h2>

        <% for (const category in team) { %>
            <div class="team-category">
                <h3 class="role-heading"><%= category.replace(/([A-Z])/g, ' $1') %></h3>
                <div class="row justify-content-center">
                    <% let members = team[category]; %>
                    <% if (!Array.isArray(members)) { members = [members]; } %>
                    <% members.forEach(member => { %>
                        <div class="col-md-3 col-sm-6 mb-4" data-aos="fade-up">
                            <div class="card p-3 team-member">
                                <img src="<%= member.image %>" alt="<%= member.name %>" class="img-fluid mx-auto d-block">
                                <h5 class="mt-2"><%= member.name %></h5>
                                <p class="text-muted"><%= member.role %></p>
                                <p><%= member.bio %></p>
                            </div>
                        </div>
                        
                    <% }); %>
                </div>
            </div>
        <% } %>

    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script>
        AOS.init();
    </script>
</body>
</html>
